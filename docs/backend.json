
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Extended user information stored in Firestore.",
      "type": "object",
      "properties": {
        "displayName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "bio": { "type": "string" },
        "professionalTitle": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["email"]
    },
    "AnalysisResult": {
      "title": "Analysis Result",
      "description": "Saved analysis data from ATS scans, Job Matching, or Resume Optimization.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "type": { "type": "string", "enum": ["ats", "match", "optimizer"] },
        "title": { "type": "string" },
        "score": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "payload": { "type": "object" }
      },
      "required": ["userId", "type", "title", "score"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "User profile data."
    },
    "/users/{userId}/history/{analysisId}": {
      "schema": "AnalysisResult",
      "description": "Historical analysis results for a specific user."
    }
  }
}
